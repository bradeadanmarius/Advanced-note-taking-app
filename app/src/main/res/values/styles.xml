<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Custom style for SearchView text -->
    <style name="SearchViewTextStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textColor">#FFFFFF</item> <!-- White text color -->
        <item name="android:textColorHint">#BDBDBD</item> <!-- Light gray hint color -->
    </style>
</resources>
